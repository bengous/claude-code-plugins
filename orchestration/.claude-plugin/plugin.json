{
  "name": "claude-orchestration",
  "version": "0.14.1",
  "description": "Advanced orchestration system for managing development workflows with worktrees, issues, PR automation, and multi-agent task delegation",
  "author": "Augustin BENGOLEA <bengous@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "orchestration",
    "worktree",
    "workflow",
    "automation",
    "github",
    "pr",
    "issues",
    "delegation"
  ],
  "commands": ["../commands"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/worktree-guard.py",
            "timeout": 5,
            "description": "Blocks raw git worktree commands to enforce managed worktree system"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "^/orc:start\\b",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/planmode.sh",
            "timeout": 5,
            "description": "Enforces plan mode for /orc:start commands"
          }
        ]
      },
      {
        "matcher": "^/pr:create\\b",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pr-guard.sh",
            "timeout": 5,
            "description": "Enforces COMPLEX orchestration policy for PR creation"
          }
        ]
      }
    ]
  }
}
