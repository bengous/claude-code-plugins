{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/worktree-guard.py",
            "timeout": 5,
            "description": "Blocks raw git worktree commands to enforce managed worktree system"
          }
        ]
      },
      {
        "matcher": "SlashCommand",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pr-guard.sh",
            "timeout": 5,
            "description": "Enforces COMPLEX orchestration policy for PR creation"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/planmode.sh",
            "timeout": 5,
            "description": "Enforces plan mode for /orc:start commands"
          }
        ]
      }
    ]
  }
}
